<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <gradient
                android:angle="90"
                android:centerX="35%"
                android:startColor="#408bff"
                android:endColor="#00DDFF"
                android:type="linear"
                />
            <size
                android:width="100dp"
                android:height="30dp"
                />
            <stroke
                android:width="2dp"
                />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <gradient
                android:angle="90"
                android:centerX="35%"
                android:startColor="#408bff"
                android:endColor="#79EBFD"
                android:type="linear"
                />
            <size
                android:width="100dp"
                android:height="30dp"
                />
            <stroke
                android:width="2dp"
                />
        </shape>
    </item>
</selector>