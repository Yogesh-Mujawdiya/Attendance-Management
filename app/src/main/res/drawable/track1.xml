<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <gradient
                android:angle="90"
                android:centerX="35%"
                android:startColor="#00FFE8"
                android:endColor="#00FFE8"
                android:type="linear"
                />
            <size
                android:width="100dp"
                android:height="30dp"
                />

        </shape>
    </item>
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <gradient
                android:angle="90"
                android:centerColor="#BBFFF5"
                android:startColor="#00FFE8"
                android:endColor="#FFFFFF"
                android:type="linear"
                />
            <size
                android:width="100dp"
                android:height="30dp"
                />
            <stroke
                android:width="1dp"
                />
        </shape>
    </item>
</selector>